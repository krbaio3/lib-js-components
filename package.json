{
  "name": "@css/ui-kit",
  "version": "0.0.1",
  "description": "Stencil Component Starter",
  "repository": {
    "type": "git",
    "url": "https://github.com/ionic-team/stencil-component-starter.git"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./static-files/lib-js-components/lib-js-components.esm.js",
      "require": "./static-files/lib-js-components/lib-js-components.cjs.js"
    },
    "./my-component": {
      "import": "./static-files/components/my-component.js",
      "types": "./static-files/components/my-component.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs",
      "types": "./loader/index.d.ts"
    }
  },
  "main": "static-files/index.cjs.js",
  "unpkg": "static-files/lib-js-components/lib-js-components.esm.js",
  "module": "static-files/index.js",
  "types": "static-files/types/index.d.ts",
  "files": [
    "static-files/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "build-storybook": "storybook build",
    "docker:build": "docker build -t @css/ui-kit-local-cdn:0.0.1 .",
    "docker:run": "docker run -p 5000:80 @css/ui-kit-local-cdn:0.0.1",
    "generate": "stencil generate",
    "lint": "eslint src/**/*{.ts,.tsx}",
    "start": "stencil build --watch --serve --docs",
    "storybook": "storybook dev -p 6006",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "watch": "stencil build --dev --watch --serve",
    "dev": "concurrently \"yarn:start\" \"yarn:storybook\""
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.8.0",
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "@stencil/core": "^4.21.0",
    "@stencil/sass": "^3.0.12",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/html": "^8.2.9",
    "@storybook/html-vite": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@storybook/web-components-vite": "^8.2.9",
    "@types/jest": "^29.5.6",
    "@types/node": "^16.18.11",
    "@types/postcss-import": "^14.0.3",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.5",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "lit": "^3.2.0",
    "postcss": "^8.4.44",
    "postcss-import": "^16.1.0",
    "puppeteer": "^21.9.0",
    "react": "^18.3.1",
    "sass-embedded": "^1.77.8",
    "stencil-tailwind-plugin": "^1.8.0",
    "storybook": "^8.2.9",
    "storybook-addon-stencil": "^0.2.1",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  },
  "collection": "static-files/collection/collection-manifest.json",
  "collection:main": "static-files/collection/index.js"
}
